    <Button
        android:id="@+id/btn_data_impExp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据导入导出"
        android:textSize="18sp" />

    <Button
        android:visibility="gone"
        android:id="@+id/open_assist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始运行"
        android:textSize="18sp" />

</LinearLayout>
