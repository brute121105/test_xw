<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme"
    tools:context="hyj.xw.activity.ApiSettingActivity">

    <TextView
        android:text="平台编号（1玉米 2 爱乐赞 3 吸码 4 志远）"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/api_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="api用户"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/api_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="密码"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/api_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="项目ID"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/api_project_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/api_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试连接"
        android:textSize="18sp" />
    <Button
        android:id="@+id/api_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="18sp" />
</LinearLayout>
